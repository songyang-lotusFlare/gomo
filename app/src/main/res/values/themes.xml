<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gomo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/bg_default</item>
    </style>

    <style name="Theme.Gomo.NoActionBar" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gomo.AppBarOverlay" parent="ThemeOverlay.Material3.Dark" />

    <style name="Theme.Gomo.PopupOverlay" parent="ThemeOverlay.Material3.Light" />


    <style name="Theme.SplashScreen.Launcher" parent="Theme.SplashScreen">
        <item name="splashScreenIconSize">@dimen/splashscreen_icon_size</item>
        <item name="windowSplashScreenBackground">@color/theme_red</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Gomo</item>

    </style>

</resources>
